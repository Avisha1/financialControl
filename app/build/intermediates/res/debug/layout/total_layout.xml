<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tl_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_title"
        android:layout_centerHorizontal="true"
        android:text="Ammount"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/tl_expand_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_sum"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners_gray_back"
        android:text="@string/detail" />

</RelativeLayout><!-- From: file:/C:/Users/avishai/AndroidStudioProjects/financialControl/app/src/main/res/layout/total_layout.xml -->