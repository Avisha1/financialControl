<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.financialcontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />
    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.financialcontrol.activity.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.financialcontrol.activity.AddingEntryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_add_entry"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.AccountsList"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_account_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.MainPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.financialcontrol.activity.EntriesActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_entries"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.AccountsTabActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_accounts_tab"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.App"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_app"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.FilterEntriesActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_filter_entries"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.financialcontrol.activity.PaymentsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_payments"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>